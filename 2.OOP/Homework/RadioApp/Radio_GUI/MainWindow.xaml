        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radio_GUI"
        mc:Ignorable="d"
        Title="Radio" MinHeight="500" MinWidth="250" MaxHeight="500" MaxWidth="250">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\SpartaGlobal\Github\Eng71Training\OOP\Homework\RadioApp\Radio_GUI\Nano.jpg"/>
        </Grid.Background>
        <MediaElement x:Name="Player" LoadedBehavior="Manual" UnloadedBehavior="Manual" HorizontalAlignment="Left" Height="100" Margin="56,12,0,0" VerticalAlignment="Top" Width="100"/>
